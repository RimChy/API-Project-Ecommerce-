                                <div class="card-body">
                                    <h5 class="card-title" style="color: black"><span class="font-weight-bold"> Product Name: </span>{{this.pName}}</h5>
                                    <h6 class="card-title" style="color: black;font-weight:bold">Product Price: {{this.pPrice}}</h6>
                                    <p class="text-success" style="display: inline-block;">Product Status: {{this.pStatus}}</p>
                                      
                                     

