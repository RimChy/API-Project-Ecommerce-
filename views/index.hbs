        <!------Featured Categories----->
        <section class="featured-categories  p-5" id="categories">
            <div class="container wow bounceInUp">
                <h1 class="text-center pt-2 pd-2">Categories</h1>
             
                {{#if Categories}}
                <div class="row ">
                    {{#each Categories}}
                    <div class="col-md-4 mt-3">
                        <div class="border bg-dark f-border text-center">
                            <h6 class="text-white font-weight-bold mt-1">{{this.cName}}</h6>

                            <img src="uploads/categories/{{this.cImage}}" style="width: 100%;">



                        </div>
                    </div>
                    {{/each}}



                </div>
                
                {{else}}
                <h3 class="text-center">No Categories to Show</h3>
                
                {{/if}}
                

            </div>
        </section>


        <div class="container " id="products">
            <h2 class="title text-center">Featured Products</h2>
            <hr style="border:solid 2px red" class="w-50 mx-auto">
            <div class="row">
            {{#if Products}}
                {{#each Products}}
            
                <a href="product/{{this._id}}" type="submit">
                 
                    <div class="col-4 card-product wow bounceInRight">
                        <div class="product-top">
                            <div class="card"
                                style="width: 100%;padding-top:2%;padding-left:2%;padding-right:2%;border-radius:1%">
                                <img src="uploads/categories/{{this.pImage1}}" class="card-img-top" alt="..." style="border-radius:0%">
                                <div class="overlay-right">

                                    <button type="button" class="btn btn-secondary" title="Add to Wishlist">
                                        <a href="cart.hbs"> <i class="fa fa-heart"></i></a>
                                    </button>

                                    <button type="button" class="btn btn-secondary" title="Add to Cart">
                                        <a href="/product/added-to-cart/{{this._id}}"><i class="fa fa-shopping-cart"></i></a>
                                    </button>
                                </div>
                                <div class="rating card-body" style="background-color:transparent;padding:0">
                                    <h6><strong>{{this.pName}}</strong></h6>
                                    <p><strong>${{this.pPrice}}</strong></p>
                                    <p id="rating1" class="">{{this.pRating}}<i class="fa fa-star"></i></p>
                                    
                                    

                                </div>
                            </div>
                        </div>
                    </div>
                 
                </a>
                {{/each}}
                {{else}}
                <h3 class="text-center">No Products to Show</h3>
                {{/if}}
              

                

            

